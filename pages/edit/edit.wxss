/* pages/edit/edit.wxss */
.wrap {
  height: 100vh;
}
.list {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
}

.group-text {
  flex-basis: 33%;
  max-height: 33%;
  padding: 35rpx 35rpx 0;
  box-sizing: border-box;
}
.text-area {
  padding: 30rpx;
  border: 1px solid #ccc;
  border-radius: 8rpx;
  height: 100%;
  box-sizing: border-box;
}
.text-area textarea {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}

.group-list {
  padding: 20rpx;
  display: flex;
  flex-wrap: wrap;
  max-height: 64%;
  overflow: auto;
}

.group-list .select {
  display: block;
  padding: 15rpx 0;
  text-align: center;
  width: 33.333%;
  word-break: break-all;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.group-list .select .item {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 15rpx;
  border-radius: 40rpx;
  box-shadow: 2rpx 2rpx 5rpx 2rpx rgba(0,0,0,.1);
  transition: all .25s;
}
.group-list .select.active .item {
  justify-content: space-around;
  background-color: rgba(0,0,0,.7);
  color: #fff;
  box-shadow: 2rpx 2rpx 5rpx 2rpx rgba(0,0,0,.3);
}
.group-list .select .item .text {
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding: 15rpx 15rpx;
}
.group-list .select .item .del-wrap {
  opacity: 0;
  display: none;
  width: 42rpx;
  height: 42rpx;
  padding: 15rpx 15rpx;
  transition: all .25s;
}
.group-list .select.active .item .del-wrap {
  display: block;
  opacity: 1;
}
.del-wrap .del-btn {
  display: block;
  height: 100%;
  width: 100%;
}
